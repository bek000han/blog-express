<div class="admin-title">
    <h2>Posts</h2>
    <a href="/add-post" class="btn">+ Create new blog</a>
</div>
<ul class="admin-posts">
    <% data.forEach(post => { %>
        <li>
            <a href="/post/<%= post._id %>" style="text-decoration: underline;">
                <%= post.title %> &nearr;
            </a>
            <div class="admin-post-controls">
                <a href="/edit-post/<%= post._id %>" class="btn">Edit</a>
                <form action="/delete-post/<%= post._id %>?_method=DELETE" method="POST">
                    <input type="submit" value="Delete" class="btn" style="background-color: #b30000;"> 
                </form>
            </div>
        </li>
    <% }) %>
    <% if (nextPage !== null) { %>
        <a href="dashboard/?page=<%= nextPage %>" class="pagination">&lt; View older posts</a>
    <% } %>
</ul>